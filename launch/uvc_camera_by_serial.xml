<launch>

  <arg name="cam_serial" />
  <arg name="cam_index" />

  <group ns="camera">
    <node pkg="libuvc_camera" type="camera_node" name="cam$(arg cam_index)">
      <!-- Parameters used to find the camera -->
      <param name="vendor" value="0x046d"/>
      <param name="product" value="0x082c"/>
      <param name="serial" value="$(arg cam_serial)"/>

      <!-- Published topics -->
      <remap from="camera_info" to="cam$(arg cam_index)/camera_info" />
      <remap from="image_raw" to="cam$(arg cam_index)/image_raw" />

      <!-- Image size and type -->
      <param name="width" value="640"/>
      <param name="height" value="480"/>
      <!-- choose whichever uncompressed format the camera supports: -->
      <param name="video_mode" value="jpeg"/> <!-- or yuyv/nv12/jpeg -->

      <param name="timestamp_method" value="start"/> <!-- start of frame -->
      <param name="camera_info_url" value="file:///tmp/cam.yaml"/>

      <param name="camera_frame_id" value="cam$(arg cam_index)" />

      <param name="auto_exposure" value="3"/> <!-- use aperture_priority auto exposure -->
      <param name="auto_white_balance" value="false"/>
    </node>
  </group>
</launch>